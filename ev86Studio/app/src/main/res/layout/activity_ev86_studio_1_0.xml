<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".ev86Studio_1_0"
                android:orientation="vertical"
                >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP :"
            />

        <EditText
            android:id="@+id/etxtIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="192.168.128.xxx"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Port :"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/etxtPort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9090"
            />


        <ToggleButton
            android:id="@+id/tglbtnConnection"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textOn="DisConnect"
            android:textOff="Connect"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Recv : "
            />

        <TextView
            android:id="@+id/txtRecieveComm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="xxx"
            />


    </LinearLayout>







    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30dp"
                android:text="WTP 1"
                android:background="#ff8c00"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/vtxtWtmp1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="0.00"
                android:gravity="right"
                android:background="#ffff00"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"

                />


            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="WTP 2"
                android:gravity="center"
                android:background="#ff8c00"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/vtxtWtmp2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="0.00"
                android:gravity="right"
                android:background="#ffff00"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtVoltage"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30dp"
                android:text="Voltage"
                android:background="#ff8c00"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/vtxtVoltage"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="0.00"
                android:gravity="right"
                android:background="#ffff00"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"

                />


            <TextView
                android:id="@+id/txtCurrent"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Current"
                android:gravity="center"
                android:background="#ff8c00"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/vtxtCurrent"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="0.00"
                android:gravity="right"
                android:background="#ffff00"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                />

            </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMotorTemp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="MotorTp"
                android:gravity="center"
                android:background="#ff8c00"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/vtxtMotorTemp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="0.00"
                android:gravity="right"
                android:background="#ffff00"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                />


            <TextView
                android:id="@+id/txtControllerTemp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="ControllerTp"
                android:gravity="center"
                android:background="#ff8c00"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/vtxControllerTemp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="0.00"
                android:gravity="right"
                android:background="#ffff00"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
